<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:paddingTop="24dp"
    tools:ignore="ExtraText">

    <!-- Email EditText -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter your email address"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:focusable="true"
        android:editable="true" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter your password"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:focusable="true"
        android:editable="true"
        tools:ignore="HardcodedText" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginBottom="24dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Tap to login"
        android:padding="16dp"
        android:layout_marginTop="8dp" />

    <!-- Register TextView -->
    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Register"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:importantForAccessibility="yes"
        android:contentDescription="Tap to register a new account"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Admin Login TextView -->
    <TextView
        android:id="@+id/txt_admin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:importantForAccessibility="yes"
        android:contentDescription="Tap to login as admin"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp" />

    <!-- ProgressBar to show loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Loading indicator" />

</LinearLayout>