<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Change Admin Password Button -->
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Admin Password" />

    <!-- Add Candidate Button -->
    <Button
        android:id="@+id/btn_add_candidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Candidate" />

    <!-- Add Another Admin Button -->
    <Button
        android:id="@+id/btn_add_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Another Admin" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

</LinearLayout>
